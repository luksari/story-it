<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="mvvm.coding.story_it.ui.start.StartViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.start.startFragment">
            <TextView
                    android:id="@+id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="36dp"
                    android:layout_width="wrap_content"
                    android:textSize="46sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="story.it"/>
            <Button
                    android:id="@+id/new_game_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New game"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toRightOf="parent"
            />
            <Button
                    android:id="@+id/leaderboard_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaderboard"
                    app:layout_constraintTop_toBottomOf="@id/new_game_btn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toRightOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>